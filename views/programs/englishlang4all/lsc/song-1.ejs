        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

        padding: 2rem 1.2rem;
        font-size: 3rem;
    }

    .lsc-text {
        font-size: 1.2rem;
    }

    .lsc-text-input {
        padding-left: 1rem;
        width: 25rem;
        border: 1px solid purple;
        border-radius: 5px;
        font-size: 1.2rem;
    }

    .number {
        padding: 0.5rem;
        margin: 0 1rem;
        background-color: rgb(64, 151, 233);
        color: #181515;
        border-radius: 50%;
    }

    .lsc-song-info {
        font-family: Georgia, 'Times New Roman', Times, serif;
        font-size: 2rem;
        padding: 1rem 0;
        color: blueviolet;
    }

    @media (max-width: 768px) {
        #banner-wrapper {
            position: absolute;
            z-index: 2;
            top: 50%;
            left: 10%;
        }

        .lsc-acronym {
            font-size: 3.5rem;
            font-weight: 700;
        }

        .lsc-title {
            font-size: 2rem;
        }

        .lsc-song-info {
            font-size: 1.3rem;
        }
    }
</style>
