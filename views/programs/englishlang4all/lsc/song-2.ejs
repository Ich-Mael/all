            z-index: 2;
            top: 50%;
            left: 10%;
        }

        .lsc-acronym {
            font-size: 3.5rem;
            font-weight: 700;
        }

        .lsc-title {
            font-size: 2rem;
        }

        .lsc-song-info {
            font-size: 1.3rem;
        }
