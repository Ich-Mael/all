    }

    .bg-img-wrapper img {
        width: 100%;
        height: 100%;
        opacity: 0.8;
        object-fit: cover;
        animation: scale 25s;
    }

    @keyframes scale {
        0% {
            transform: scale(1.3);
        }

        100% {
            transform: scale(1);
        }
    }

    #banner-wrapper {
        position: absolute;
        z-index: 2;
        top: 25%;
        left: 10%;
    }

    @keyframes moveBanner {
        0% {
            transform: translateX(30rem) rotate(20deg);
        }

        100% {
            transform: translateX(0) rotate(0);
            opacity: 1;
        }
    }

    #banner {}

