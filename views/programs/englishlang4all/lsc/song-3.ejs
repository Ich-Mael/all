        /* width: 90%; */
        font-family: "Poppins", sans-serif;
        /* font-family: "Kaushan Script", cursive; */
        opacity: 0;
        /* line-height: 5rem; */
        text-shadow: 1px 2px 2px rgba(0, 0, 0, 0.89);
        animation: moveBanner 2s 1.2s forwards;
        margin-bottom: 2rem;
    }

    .lsc {
        color: blueviolet;
        margin: 0;
        padding: 0;
    }

    .lsc-acronym {
        font-size: 5rem;
        font-weight: 900;
        letter-spacing: 0.1rem;
    }

    .lsc-title {
        font-family: 'Times New Roman', Times, serif;
        font-family: "Chivo", sans-serif;
        font-weight: 700;
        color: #f5f1f7;
        background-color: rgb(215, 240, 250);
        background: #FC466B;
        /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #3F5EFB, #FC466B);
        /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #3F5EFB, #FC466B);
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

        padding: 2rem 1.2rem;
        font-size: 3rem;
    }

    .lsc-text {
        font-size: 1.2rem;
    }

    .lsc-text-input {
        width: 25rem;
        padding: 1rem;
        border: 1px solid purple;
        border-radius: 5px;
        font-size: 1.2rem;
    }

    .number {
        padding: 0.5rem;
        margin: 0 1rem;
        background-color: rgb(64, 151, 233);
        color: #181515;
        border-radius: 50%;
    }

    .lsc-song-info {
        font-family: Georgia, 'Times New Roman', Times, serif;
        font-size: 2rem;
        padding: 1rem 0;
        color: blueviolet;
    }


    .repeat {
        padding: 0.1rem 0.3rem;
        margin: 0 0.5rem;
        border-radius: 2px;
        background-color: #0f6662;
        color: #f5f1f7;
    }

    #song-wrapper {
        position: -webkit-fixed;
        position: fixed;
        left: 2%;
        top: 15%;
        z-index: 2000;
    }

    @media (min-width: 1100px) {
        #quiz-1 {
            padding-left: 8rem;
        }
    }

    @media (max-width: 768px) {
        #banner-wrapper {
            position: absolute;
            z-index: 2;
            top: 50%;
            left: 10%;
        }

        .lsc-acronym {
            font-size: 3.5rem;
            font-weight: 700;
        }

        .lsc-title {
            font-size: 2rem;
        }

        .lsc-song-info {
            font-size: 1.3rem;
        }
    }
</style>
