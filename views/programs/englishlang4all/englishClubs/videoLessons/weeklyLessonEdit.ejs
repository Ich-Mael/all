<% layout('layouts/engClubBoilerplate') %>
<!-- WORD Processor-->
<script src="https://cdn.tiny.cloud/1/p06f8vxdpje8xosyvnq48z68vc7n479iauh5s2jk9zx30qg2/tinymce/5/tinymce.min.js"
	referrerpolicy="origin"></script>
</script>
<script>
	tinymce.init({
		selector: '.mytextarea',
		height: 500,
		max_width: 500,
		min_height: 300,
		min_width: 400
	});
</script>
<style>
	html {
		font-size: 80%;
	}
</style>
<h1 class="text-center my-5" style="color: blueviolet;"><%= club.acronym %> Board Members Dashboard</h1>
<h3 class="text-center">Update video Lesson</h3>
<hr>
<div class="container my-5 col-md-8">
	<hr>
	<p>
		<button class="btn btn-primary ms-2 me-5" type="button" data-bs-toggle="collapse" data-bs-target="#videoLesson"
			aria-expanded="false" aria-controls="collapseExample">
			Edit a video lesson
		</button>


		<form
			action="/englishlang4all/clubs/<%= hub.cityName %>/hub/<%= hub._id %>/club/<%= club._id %>/board_dashboard/videoLessons/<%= videoLesson._id%>?_method=PUT"
			method="POST">
			<div class="collapse" id="videoLesson">
				<!-- Lesson title -->
				<label class="form-label my-3" for="lessonTitle">Lesson title</label>
				<input type="text" class="form-control" name="weeklyLesson[lessonTitle]" id="articleImage"
					value="<%= videoLesson.lessonTitle  %>" />

				<!-- Video Link  -->
				<label class="form-label my-3" for="videoLink">Video Link</label>
				<input type="text" class="form-control" name="weeklyLesson[videoLink]"
					value="<%= videoLesson.videoLink %>" id="title" />


				<!-- Author -->
				<label class="form-label my-3" for="author">Author</label>
				<input type="text" class="form-control" name="weeklyLesson[lessonAuthor]"
					value="<%= videoLesson.lessonAuthor %>" id="articleAuthor" />

				<!-- Lesson Summary -->
				<label class="form-label my-3" for="lessonSummary">Lesson Summary</label>
				<textarea type="text" class="form-control mytextarea" name="weeklyLesson[lessonSummary]" value=""
					id="articleContent"><%= videoLesson.lessonSummary %></textarea>
				<hr />
			</div>
			<button class="btn my-3  mx-2 btn-outline-success" type="submit">Update a video lesson</button>
		</form>
	</p>
	<hr>
</div>