<% layout('layouts/engClubBoilerplate') %>
<!-- WORD Processor-->
<script src="https://cdn.tiny.cloud/1/p06f8vxdpje8xosyvnq48z68vc7n479iauh5s2jk9zx30qg2/tinymce/5/tinymce.min.js"
	referrerpolicy="origin"></script>
</script>
<script>
	tinymce.init({
		selector: '.mytextarea',
		height: 500,
		max_width: 500,
		min_height: 300,
		min_width: 400
	});
</script>
<!-- Workers of the months -->
<div class="container my-5 col-md-8">
	<hr>
	<p>
		<button class="btn btn-primary ms-2 me-5" type="button" data-bs-toggle="collapse" data-bs-target="#student"
			aria-expanded="false" aria-controls="collapseExample">
			Female Leader of the Month
		</button>

		<button class="btn btn-primary ms-2 me-5" type="button" data-bs-toggle="collapse" data-bs-target="#instructor"
			aria-expanded="false" aria-controls="collapseExample">
			Male Leader of the Month
		</button>

		<form
			action="/englishlang4all/clubs/<%= hub.cityName %>/hub/<%= hub._id %>/club/<%= club._id %>/board_dashboard/leadersOfMonth/<%= leader._id%>?_method=PUT"
			method="POST">
			<div class="collapse" id="student">

				<section class="word-day-wrapper my-4" style="background-color: rgb(221, 241, 195); padding: 2rem;">
					<h4>Female Leader of the month</h4>
					<!-- full name -->
					<label class="form-label my-3" for="fullname"> Fullname </label>
					<input type="text" class="form-control" name="studentOfMonth[fullname]" id="studentFullname"
						value="<%= leader.studentOfMonth.fullname %>" />

					<!-- Image Link -->
					<label class="form-label my-3" for="imageUrl">Image Link</label>
					<input type="text" class="form-control" name="studentOfMonth[imageUrl]"
						value="<%= leader.studentOfMonth.imageUrl %>" id="StudentImage" />


					<!-- Reasons -->
					<label class="form-label my-3" for="author">Reasons</label>
					<input type="text" class="form-control" name="studentOfMonth[reasons]"
						value="<%= leader.studentOfMonth.reasons %>" id="reasons" />

					<!-- About -->
					<label class="form-label my-3" for="about">About</label>
					<textarea type="text" class="form-control mytextarea" name="studentOfMonth[about]" value=""
						id="articleContent"><%= leader.studentOfMonth.about %></textarea>
					<hr />
				</section>
			</div>
			<div class="collapse" id="instructor">
				<h4>Instructor of the month</h4>
				<section class="word-day-wrapper my-4" style="background-color: rgb(197, 206, 248); padding: 2rem;">
					<!-- full name -->
					<label class="form-label my-3" for="fullname">Fullname </label>
					<input type="text" class="form-control" name="instructorOfMonth[fullname]" id="intructorFullname"
						value="<%= leader.instructorOfMonth.fullname %>" />

					<!-- Image Link -->
					<label class="form-label my-3" for="imageUrl">Image Link</label>
					<input type="text" class="form-control" name="instructorOfMonth[imageUrl]"
						value="<%= leader.instructorOfMonth.imageUrl %>" id="instructorImage" />


					<!-- Reasons -->
					<label class="form-label my-3" for="author">Reasons</label>
					<input type="text" class="form-control" name="instructorOfMonth[reasons]"
						value="<%= leader.instructorOfMonth.reasons %>" id="reasons" />

					<!-- About -->
					<label class="form-label my-3" for="about">About</label>
					<textarea type="text" class="form-control mytextarea" name="instructorOfMonth[about]" value=""
						id="articleContent"><%= leader.instructorOfMonth.about %></textarea>
					<hr />
				</section>
			</div>
			<button class="btn my-3  mx-2 btn-outline-success" type="submit">Update leaders of the month's info</button>
		</form>
	</p>
	<hr>
</div>