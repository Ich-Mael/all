<% layout('layouts/boilerplate') %>
<link href="/stylesheets/englishforAll/englishClubs/home.css" rel="stylesheet" />
<style>
  .hub-country-banner {
    background: linear-gradient(to bottom,
        rgba(21, 18, 29, 0.439),
        rgba(20, 21, 59, 0.339)),
      url("https://thegtcgroup.com/wp-content/uploads/2020/07/GTC-Group-Training-Consulting-Energy-Consulting.jpg") top center;
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    min-height: 60vh;
    background-attachment: fixed;
    background-repeat: no-repeat;
  }

  .hub-country {
    color: rgb(252, 252, 252);
    text-shadow: 1px 2px 3px rgb(12, 1, 33);
    font-size: 4rem;
 font-family: 'Poppins', sans-serif;
  }

  .town-text{
    font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif


  }

  .club-type-list {
    background-color: aliceblue;
    padding: 1rem 2rem;
    /* height: 2.3rem; */
  }

  .clubs-card {
    box-shadow: rgba(0, 0, 0, 0.25) 0px 14px 28px, rgba(0, 0, 0, 0.22) 0px 10px 10px;
    border-radius: 5px;
    margin-top: 5rem;
    padding: 0 2rem;
  }

  .type-of-club {
    margin: 1rem 0 0;
    color: #f0f5f4;
    z-index: 300;
    display: inline-block;
    text-align: start;
    font-family: Georgia, 'Times New Roman', Times, serif;
    padding: 1.2rem;
    background-color: #057c5e;
    border: 1px solid rgb(255, 255, 255);
    font-weight: 600;
    border-radius: 5px;
    letter-spacing: 0.2rem;
    font-size: 1.3rem;
  }

  .afrohk-club {
    background-color: #185a9d;
  }


  @media (max-width: 1200px) {
    .type-of-club {
      font-size: 2rem;
    }

    .line-1 {
      width: 2rem;
    }

    .line-2 {
      width: 15rem;
    }
  }

  @media (max-width: 1100px) {
    .type-of-club {
      font-size: 2rem;
    }

    .line-1 {
      width: 2rem;
    }

    .line-2 {
      width: 10rem;
    }
  }

  @media (max-width: 1000px) {
    .hub-country {
      font-size: 8rem;
    }

    .type-of-club {
      font-size: 1.5rem;
    }

    .line-1 {
      width: 2rem;

    }

    .line-2 {
      width: 8rem;
    }
  }

  @media (max-width: 798px) {
    .line-1 {
      display: none;
    }

    .line-2 {
      display: none;
    }
  }

  @media (max-width: 698px) {
    .hub-country {
      font-size: 6rem;
    }

    .line-1 {
      display: none;
    }

    .type-of-club {
      font-size: 1.2rem;
      text-align: center;
    }

    .line-2 {
      display: none;
    }
  }

  @media (max-width: 530px) {
    .hub-country {
      font-size: 4rem;
    }

    .type-of-club {
      font-size: 1.2rem;
    }


  }

  @media (max-width: 350px) {
    .hub-country {
      font-size: 2.4rem;
    }
    
    .type-of-club {
      font-size: 1rem;
    }
  }
</style>
<!-- banner-->
<div class="hub-country-banner d-flex justify-content-center align-items-center">
  <h2 class="hub-country"> Natural English at Work </h2>
</div>

<div class="univ-eng-clubs">
  <div class="cards-wrapper">
    <h3 class="univ-eng-club-title">
      <span class="underline"></span>Natural English Clubs in <%= hubCountry %> <span class="underline"></span>
    </h3>
    <h4 class="text-center mb-5 town-text">Cliquez la ville pour voir les clubs disponibles</h4>

    <div class="d-flex justify-content-around align-items-center py-5" style="background: #43cea2;  /* fallback for old browsers */
      background: -webkit-linear-gradient(to right, #185a9d, #43cea2);  /* Chrome 10-25, Safari 5.1-6 */
      background: linear-gradient(to right, #185a9d, #43cea2); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      ">
      <% for (let hub of countryHubs){%>
      <p>
        <button class="btn btn-lg btn-dark" type="button" data-bs-toggle="collapse"
          data-bs-target="#N-<%= hub.cityName %>" aria-expanded="false" aria-controls="collapseExample">
          <%= hub.cityName %>
        </button>
      </p>
      <%}%>
      </div>

