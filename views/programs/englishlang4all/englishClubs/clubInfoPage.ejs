  <!-- English club rules -->
  <section class="club-info">
    <h1 class="section-title">About us</h1>
    <div class="container">
      <div id="tv-container">
        <div id="monitor">
          <div class="afrohk-TV">
            <h3 class="text-center afrohk-text mb-2 py-0"><span class="afrohk">AfroHK</span><span
                class="tv">Radar</span>
            </h3>
          </div>
          <div id="monitorscreen">
            <iframe id="vimeo-content" loading="lazy" width="100%" height="100%" src="<%= club.clubPresentationVideoUrl %>" title="YouTube
      video player" frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; fullscreen; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen>
            </iframe>
          </div>
        </div>
      </div>
    </div>
    <h2 id="join-us" class="need-to-know">What you need to know before you join us</h2>
    <div class="club-description">
      <div class="container col-md-8 col-lg-6 col-sm-10 px-3 py-5">
        <%-club.description%>
      </div>
    </div>
  </section>

  <!-- Event -->
  <section id="Coming-Events" class="">
    <h1 class="section-title">Upcoming Public Events</h1>
    <% if (club.clubEvents.length !==0) {%>
      <div class="container pt-5">
        <div class="row mb-5">
          <div class="col-lg-6" data-aos="fade-right" data-aos-easing="linear" data-aos-duration="500">
            <h2 class="event-title px-4">
              <%= club.clubEvents[0].title %>
            </h2>
            <div>
              <h4 class="event-summary">Know more</h4>
              <div class="event-paragraph">
                <%- club.clubEvents[0].aboutEvent %>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="event-img-wrapper" data-aos="fade-left" data-aos-easing="linear" data-aos-duration="500">
              <img src=" <%= club.clubEvents[0].eventImgLink %>" class="img-fluid event-img" alt="">
            </div>
          </div>
        </div>
        <div class="event-info-details">
          <div class="container">
            <h3 class="registration-info">Event Details</h3>
            <div class="event-info-wrapper">
              <h5 class="event-date"> <span class="start-date ">Date</span>
                <%= days[club.clubEvents[0].date.getDay()] %>,
                  <%=club.clubEvents[0].date.getDate()%>
                    <%= months[club.clubEvents[0].date.getMonth()] %>
                      <%=club.clubEvents[0].date.getFullYear()%>
              </h5>
              <h5 class="event-date"> <span class="start-date "> Time</span>
                <%= club.clubEvents[0].time %>
              </h5>
              <h5 class="event-date"> <span class="start-date "> Venue</span>
                <%= club.clubEvents[0].venue %>
              </h5>
              <h5 class="event-date"> <span class="start-date "> Entry</span>
                <%= club.clubEvents[0].entry %>
              </h5>

            </div>
            <p class="event-line"></p>
          </div>
        </div>
      </div>
      <% } %>
  </section>

  <!-- Mediatheque -->
  <section>
    <h1 class="section-title">Club Best Moments</h1>
    <div class="container p-3">
      <div class="gallery-container">
        <% for(let i=0; i < 5 ; i++){ %>
          <% if(club.clubGallery[i]){%>
            <div class="gallery-card">
              <img src="<%=club.clubGallery[i].imageLink%>">
              <div class="card__head">
                <%=club.clubGallery[i].imageTitle %>
              </div>
            </div>
            <%}%>
              <%}%>
      </div>
    </div>
  </section>