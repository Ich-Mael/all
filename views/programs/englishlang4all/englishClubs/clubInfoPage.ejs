<% layout('layouts/boilerplate') %>
  <link href="/stylesheets/englishforAll/englishClubs/clubHome.css" rel="stylesheet" />
  <!-- swiper-->
  <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />

  <div class="pb-5">
    <div id="banner">
      <div class="bg-img-wrapper">
        <img class="img-medium" src="<%= club.bannerImageUrlMedium %>" alt="" />
      </div>
      <div class="club-info">
        <div class="row">
          <div class="col-md-4">
            <div class="club-logos-wrapper">
              <img class="club-logo img-thumbnail" src="<%=club.logoImageUrl%>" alt="" />
            </div>
          </div>
          <div class="col-md-8">
            <h1 class="club-name">
              <%=club.name%>
            </h1>
            <p class="club-motto">
              <%=club.motto %>
            </p>
            <div class="d-flex justify-content-center py-3">
              <a class="btn btn-outline-primary mx-3 fs-5"
                href="/englishlang4all/clubs/<%= hub.cityName %>/hub/<%= hub._id %>/club/<%= club._id %>">Get in</a>

              <a class="btn btn-primary mx-3 fs-5" href="#join-us">Join this Club</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Team -->
  <section id="team">
    <h1 class="section-title">Meet Our Staff Members</h1>
    <!-- Swiper -->
    <div class="col-lg-10 container myTeamSwiper">
      <div class="swiper-wrapper">
        <% for(let i=0; i < club.boardMembers.length ; i++){ %>
          <!--President-->
          <div class="swiper-slide">
            <div class="team-image-wrapper">
              <img class="team-img img-fluid" src="<%= club.boardMembers[i].clubMember.imageUrl %>" alt="">
              <div>
                <div class="team-member-info">
                  <h6 class="position">
                    <%= club.boardMembers[i].position %>
                  </h6>
                  <div class="d-flex justifify-content-center ">
                    <div class="team-position-line"></div>
                  </div>
                  <p class="team-member-name">
                    <%= club.boardMembers[i].clubMember.name +" "+
                club.boardMembers[i].clubMember.surname%></p>
              <div class=" d-flex w-100 member-social justify-content-around">
                      <a target="_blank" class="d-block" href="mailto:ismaelzerbo_18@outlook.com?"><i
                          class="fa-solid fa-envelope"></i></a>

                      <a target="_blank" class="d-block" href="https://www.linkedin.com/in/ismael-zerbo-0839a3174/"><i
                          class="fa-brands fa-linkedin"></i></a>

                      <a target="_blank" class="d-block" href="https://wa.me/22664350101"><i
                          class="fa-brands fa-whatsapp"></i></a>
                </div>
              </div>

            </div>
          </div>
      </div>
      <%}%>
    </div>
