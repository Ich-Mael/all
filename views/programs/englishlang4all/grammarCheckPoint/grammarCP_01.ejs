<% layout('layouts/boilerplate') %>
<link href="/stylesheets/englishforAll/englishClubs/grammarQuiz.css" rel="stylesheet" />
<!-- FontAweome CDN Link for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<h1 class="nec">Natural English Clubs</h1>
<h3 class="text-center py-3 test_number">Grammar CheckPoint Challenge Quiz </h3>
<h4 class="text-center py-2 test_title">Use of <strong>in - on - at</strong> as prepositions of time</h4>
<div class="quiz_container d-flex justify-content-center align-items-start">
    <!-- start Quiz button -->
    <div class="start_btn"><button>Start Quiz</button></div>
    <!-- Info Box -->
    <div class="info_box col-md-5">
        <div class="info-title"><span>Rules of this Quiz</span></div>
        <div class="info-list">
            <div class="info">1. You will have only <span>15 seconds</span> per each question.</div>
            <div class="info">2. Once you select your answer, it can't be undone.</div>
            <div class="info">3. You can't select any option once time goes off.</div>
            <div class="info">4. You can't exit from the Quiz while you're playing.</div>
            <div class="info">5. You'll get points on the basis of your correct answers.</div>
        </div>
        <div class="buttons">
            <button class="quit">Exit Quiz</button>
            <button class="restart">Continue</button>
        </div>
    </div>
    <!-- Quiz Box -->
    <div class="quiz_box col-md-6">
        <header class="">
            <div class="title">GCQ_1</div>
            <div class="timer">
                <div class="time_left_txt">Time Left</div>
                <div class="timer_sec">15</div>
            </div>
            <!-- <div class="time_line"></div> -->
        </header>
        <section>
            <div class="que_text">
                <!-- Here I've inserted question from JavaScript -->
            </div>
            <div class="option_list">
                <!-- Here I've inserted options from JavaScript -->
            </div>
        </section>
        <!-- footer of Quiz Box -->
        <div id="quizz_footer">
            <div class="total_que">
                <!-- Here I've inserted Question Count Number from JavaScript -->
            </div>
            <button class="next_btn">Next Question</button>
        </div>
    </div>
    <!-- Result Box -->
    <div class="result_box col-md-6">
        <div class="icon">
            <i class="fas fa-crown"></i>
        </div>
        <div class="complete_text">
            <h2 class="text-center py-2 text-warning">Well done!!</h2>
            <h4 class="text-center">You've completed the Quiz!</h4>
        </div>
        <div class="score_text">
            <!-- Here I've inserted Score Result from JavaScript -->
        </div>
        <div class="buttons">
            <button class="restart">Try again</button>
            <button class="quit">Quit Quiz</button>
        </div>
    </div>
</div>
<script type="text/javascript" src="/javascripts/quiz_scripts/grammarQuiz.js"></script>