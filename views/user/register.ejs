<% layout('layouts/boilerplate') %>
<link href="stylesheets/user/register.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<div class="header">
  <div class="header-content">
  <h1 class="create-account-header text-center">Obtenez gratuitement un compte</h1>
  <h3 class="join-number"><span class="circle mx-2"><i class="fa fs-2 fa-check"></i></span>Rejoignez plus d'un million
    d'apprenants à travers l'Afrique</h3>
  <!-- <p class="mt-3 px-2 text-center join-quote">
    "Celui qui aime apprendre est bien prêt du savoir." <br /> <span style="font-weight: bolder; font-style: italic;">
      Confucius </span>
  </p> -->
</div>

</div>
<section class="inscription">
  <form class="validated-form" novalidate action="/register" method="POST">
    <div class="container ">
      <div class="d-flex justify-content-center">
        <div class="card col-md-10 col-lg-8  py-2">
          <h3 class="text-center py-2">Formulaire de creation de compte</h3>
          <div class="row">
            <div class="col-md">
              <!--name-->
              <div class="form-input">
                <i class="bi bi-person-circle"></i>
                <input class="form-control" placeholder="Nom" id="name" name="name" type="text" value="" required />
              </div>
              <div class="form-input">
                <i class="bi bi-person-circle"></i>
                <input class="form-control" placeholder="Prénoms" id="surname" name="surname" type="text" value=""
                  required />
              </div>
              <!--username input-->
              <div class="form-input">
                <i class="bi bi-person-circle fs-5"></i>
                <input class="form-control" placeholder="Nom Utilisateur" id="username" name="username" type="text"
                  value="" required />
              </div>
              <!--Gender -->
              <div class="py-1">
                <p>Précisez votre genre</p>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="gender" id="male" value="male" required>
                  <label class="form-check-label" for="inlineRadio1">Masculin</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="gender" id="female" value="female" required>
                  <label class="form-check-label" for="inlineRadio2">Féminin</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="gender" id="other" value="other" required>
                  <label class="form-check-label" for="inlineRadio3">Autre</label>
                </div>
              </div>

            </div>
            <div class="col-md">
              <!--Email input-->
              <div class="form-input">
                <i class="bi bi-envelope-fill"></i>
                <input class="form-control" id="email" placeholder="Adresse mail" name="email" type="text"
                  value="" required />
              </div>
              <!--Phone number-->
              <div class="form-input">
                <i class="bi bi-phone-fill"></i>
                <input class="form-control" id="phone" placeholder="Contact téléphonique " name="phoneNumber"
                  type="text" value="" required />
              </div>
              <!--Password-->
              <div class="form-input">
                <i class="fa fa-lock"></i>
                <input class="form-control" placeholder="Saisissez votre mot de passe" id="password" name="password"
                  type="password" value="" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" />
                  <label for="password" style="font-size: 10px; color: red;">Au moins six caractères, un chiffre, une lettre minuscule et une majuscule</label>
              </div>
              <div class="form-input">
                <i class="bi bi-shield-lock-fill fs-5"></i>
                <input class="form-control" placeholder="Confirmez votre mot de passe" id="confirmedpassword"
                  name="defP" type="password" value="" required />
              </div>
            </div>
          </div>

          <!-- Creation de compte-->
          <div style="margin-top: 7px; background-color:rgba(250, 249, 249, 0.89); text-align: center;"
            id="CheckPasswordMatch"></div>
          <button type="submit" class="btn btn-warning mt-4 signup">Ouverture de compte</button>
          <div class="text-center mt-4">
            <p class="my-3 py-3" style="display: inline-block; color: rgb(17, 21, 59);"><span>Vous avez
                déjà un compte?</span></p>
            <a href="/login" class="deja-compte text-center text-decoration-none">Connectez-vous</a>
          </div>
        </div>
      </div>
    </div>
    </div>
    </div>
  </form>
</section>
<script>
  $(document).ready(function () {
    $("#confirmedpassword").on("keyup", function () {
      const password = $("#password").val();
      const confirmPassword = $("#confirmedpassword").val();
      if (password != confirmPassword)
        $("#CheckPasswordMatch")
        .html("Mots de passe non identiques !")
        .css("color", "red");
      else
        $("#CheckPasswordMatch")
        .html("Super, les mots de passe sont identiques!")
        .css("color", "green");
    });
  });
</script>